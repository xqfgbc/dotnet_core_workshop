pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Set working dir'
                sh "cd resource/webapi/"
                sh "pwd"
                echo 'Build and push image'
                sh "chmod 777 ./buildAndPublish.sh"
                sh './buildAndPublish.sh'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}