pipeline {
    agent any

    stages {
        stage('Build') {
            def status = powershell(returnStatus: true, script: '.\\buildAndPublish.ps1')
            if (status == 0) {
                echo 'Success'
            } else {
                echo 'failed'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}